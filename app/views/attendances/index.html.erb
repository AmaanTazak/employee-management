<%= render 'shared/header' %>
<div class="container mt-5">
  <!-- Attendance Table -->
  <div class="card rounded-0">
    <div class="table-responsive">
      <table class="table table-hover table-striped align-middle mb-0">
        <thead class="bg-dark text-light">
          <tr>
            <th>Date</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @attendances.each do |attendance| %>
            <tr>
              <td><%= attendance.date.strftime("%d-%m-%Y") %></td>
              <td><%= attendance.check_in %></td>
              <td><%= attendance.check_out %></td>
              <td>
                <span class="<%= attendance.status == 'Present' ? 'badge bg-success' : 'badge bg-danger' %> rounded-0">
                  <%= attendance.status %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Action Buttons -->
  
    <%= link_to "Add Attendance", new_employee_attendance_path, class: "btn btn-dark mt-3 rounded-0" %>
    <%= link_to "Back to Employees", root_path, class: "btn btn-outline-dark rounded-0 mt-3" %>
</div>
