<div class="container">

<h1 class="text-center mb-4">Manage Admins</h1>

<table class="table table-bordered table-striped">
  <thead class="bg-dark text-light text-center">
    <tr>
      <th>Email</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.email %></td>
        <td><%= admin.created_at.strftime('%B %d, %Y') %></td>
        <td>
          <% if admin != current_user %> <!-- Prevent admin from deleting themselves -->
            <%= button_to "Remove", admin_path(admin), method: :delete, 
                data: { confirm: "Are you sure you want to delete this admin?" }, 
                class: "btn btn-danger btn-sm" %>
          <% else %>
            <span class="text-muted">Cannot delete yourself</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-3">
  <%= link_to "Add Admin", new_admin_path, class: "btn btn-dark rounded-0" %>
    <%= link_to "Back to Home", root_path, class: "btn btn-outline-dark rounded-0" %>
</div>
</div>