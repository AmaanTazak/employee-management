<div class="container">
  <div class="card mt-2 mb-5 rounded-0">
    <div class="card-body">
      <h2 class="text-center">Employee Details</h2>
      <div class="row mt-5">
        <!-- Employee Info Column -->
        <div class="col-lg-6 col-md-12">
          <p class="lead"><strong>Name: </strong><%= "#{@employee.first_name} #{@employee.last_name}" %></p>
          <p class="lead"><strong>Email: </strong><%= @employee.email %></p>
          <p class="lead"><strong>Position: </strong><%= @employee.position %></p>
          <p class="lead"><strong>Department: </strong><%= @employee.department %></p>
          <p class="lead"><strong>Salary: </strong><%= @employee.salary %></p>
          <p class="lead"><strong>Hired on: </strong><%= @employee.hired_on %></p>
        </div>
        
        <!-- Employee Image Column -->
        <div class="col-lg-6 col-md-12 text-center">
          <% if @employee.image.attached? %>
            <%= image_tag @employee.image.variant(resize_to_limit: [300, 300]), class: 'img-fluid' %>
          <% else %>
            <p>No photo available</p>
          <% end %>
        </div>
      </div>

      <!-- Buttons Section -->
      <div class="d-flex justify-content-between mt-4 flex-wrap">
        <div>
          <%= link_to "Edit Employee", edit_employee_path(@employee), class: "btn btn-dark rounded-0" %>
          <%= link_to "Back to Employees", employees_path, class: "btn btn-outline-dark rounded-0" %>
        </div>
        <div>
       <%= button_to employee_path(@employee), 
              method: :delete, 
              data: { confirm: "Are you sure you want to delete this employee?" }, 
              class: "btn btn-danger" do %>
           Remove Employee <i class="fas fa-trash"></i> 
<% end %>

        </div>
      </div>
    </div>
  </div>
</div>
